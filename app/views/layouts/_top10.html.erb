<div class="container">
    <section class="col-xs-8 col-sm-6 col-md-8">
	<% top10.each_with_hit do |place, hit| %>
		<article class="search-result row">
        <div class="info">
          <div class="col-sm-2">
            <a href="#" title="<%=place.title%>"><img src="http://lorempixel.com/120/90/food?rand=<%=place.id%>" alt="Lorem ipsum" /></a>
          </div>
          <div class="col-sm-10">
            <h3 class="title"><%= link_to place.title, place_path(place) %></h3>
            <span class="rating" data-score="<%= place.average_rating %>"></span>
            <p><%=place.full_address()%></p>
            <p class="phone"><%=place.phone%></p>
            <button class="btn btn-xs btn-success">Get Directions</button>&nbsp;<button class="btn btn-xs btn-danger">More info</button>&nbsp;<button class="btn btn-xs btn-warning">Visit website</button>
          </div>
        </div>
        </article>
	<% end %>
	</section>
	<section class="col-xs-4 col-sm-6 col-md-4">
		<% @top10.facets.each do |filter| %>
		<ul><span><%=filter.first%></span>
		<% @top10.facets[filter.first]['terms'].each do |term| %>
			<li style="font-size: 10px;"><%= term['term'] %> (<%= term['count']%>)</li>
		<% end %>
		</ul>
		<% end %>
	</section>
</div>