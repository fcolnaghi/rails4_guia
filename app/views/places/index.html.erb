<h1>Listing places</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Lat</th>
      <th>Lon</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <td>Distancia<%=  %> / Post<%= @post %></td>
    <% @places.each_with_index do |place, i| %>
      <tr>
        <td><%= place.title %></td>
        <td><%= @distance[i].score %></td>
        <td><%#= place.result.lat %></td>
        <td><%#= place.result.lon %></td>

        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

